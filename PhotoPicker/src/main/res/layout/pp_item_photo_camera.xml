<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/color_4d000000">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_photo_camera_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_pp_camera" />

    <TextView
        android:id="@+id/tv_item_photo_picker_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_photo_camera_camera"
        android:layout_marginBottom="@dimen/margin_size_12"
        android:gravity="center"
        android:text="@string/string_pp_take_picture"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>